//= depend_on_asset "wavegrid.png"
//= depend_on_asset "grass.jpg"

html body {
   font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
   font-weight: 300;
   font-size: 18px;
   text-align: center;
   background-repeat:repeat;
   background-image: url('<%= asset_path("wavegrid.png")%>');
}

h2 {
  text-align: center;
}

.header {
  text-align: center;
  padding: 20px;
}

.homepage {
  background-image: url('<%=asset_path("grass.jpg")%>');
  background-size: cover;
  background-repeat:no-repeat;
  font-weight: 500;
}

.mailer {
  padding: 20px;
  text-align: justify;
  text-justify: inter-word;
}

html .form {
  text-align: center;
  padding-left: 100px;
  padding-right: 100px;
}

.right_profile {
  float: right;
}


.left_profile {
  float: left;
  text-align: left;
}

.footer li {
  list-style-type: none;
}

@media only screen and (max-width: 800px) {
  .homepage {
    background-size: auto;
    background-color: black;
  }
}